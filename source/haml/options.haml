!!!
%html
  %head
    %title Configuration
    %link{rel: "stylesheet", href: "../vendor/bootstrap/css/bootstrap.min.css"}
    %link{rel: "stylesheet", href: "../vendor/highlight/styles/github.css"}
    %script{src: "../vendor/jquery/jquery.min.js"}
    %script{src: "../vendor/bootstrap/js/bootstrap.min.js"}
    %script{src: "../vendor/marked/marked.min.js"}
    %script{src: "../vendor/highlight/highlight.pack.js"}
    %script{src: "../js/options.js"}
  
  %body
    %form{id: "form"}
      .container
        .row
          %h1 Configuration
        .row
          %input#save.btn.btn-primary{type: "submit", value: "Save"}
          %input#reset.btn.btn-default{type: "reset", value: "Reset"}
        .row
          %h2 Repository Information
          %table.table.table-striped.table-bordered.table-hover.table-condensed
            %tbody
              %tr
                %th
                  %label{for: "repositories"} Repository name
                %td
                  %textarea{id: "repositories", cols: "30", rows: "8"}
          %h2 Template
          %table.table.table-striped.table-bordered.table-hover.table-condensed
            %tbody
              %tr
                %th
                  %label{for: "title"} Title
                %td
                  %input#title{type: "text", size: "20"}
                %th
                  %label{for: "assignee"} Assignee
                %td
                  %input#assignee{type: "text", size: "20"}
              %tr
                %th
                  %label{for: "labels"} Labels
                %td
                  %input#labels{type: "text", size: "20"}
                %th
                  %label{for: "milestone"} Milestone
                %td
                  %input#milestone{type: "text", size: "20"}
              %tr
                %th
                  %label{for: "body"} Body
                %td
                  %textarea#body{cols: "60", rows: "15"}
                %td{colspan: "2"}
                  #preview
